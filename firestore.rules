rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Qualquer pessoa pode VER (read) os produtos
      allow read: if true;
      // Só quem está logado (Sua mãe) pode EDITAR (write)
      allow write: if request.auth != null;
    }
  }
}